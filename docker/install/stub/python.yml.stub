version: '3.8'
services:
  python:
    image: ${CONTAINER_NAME}-python-3-11-1-alpine-dev
    build:
      context: ./
      dockerfile: ./docker/python/Dockerfile
    container_name: ${CONTAINER_NAME}-python-container-dev
    working_dir: /app/python
    ports:
      - "5000:5000"
    volumes:
      - ./:/app
    command: sh -c "pip install -r requirements.txt && waitress-serve --host 0.0.0.0 --port 5000 app:app"
    networks:
      - laravel
    labels:
      - "traefik.enable=false"